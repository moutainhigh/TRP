<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans default-lazy-init="false" default-autowire="no"
	default-dependency-check="none">

	<!--    ///////////////////    Action配置        //////////////////////////     -->
	<!-- 机票订单 action  -->
	<bean name="/airticket/listAirTicketOrder"
		class="com.fdays.tsms.airticket.action.AirticketOrderListAction"
		singleton="false" lazy-init="default" autowire="default"
		dependency-check="default">
		<property name="airticketOrderBiz">
			<ref bean="airticketOrderBiz" />
		</property>
	</bean>
	<bean name="/airticket/airticketOrder"
		class="com.fdays.tsms.airticket.action.AirticketOrderAction"
		singleton="false" lazy-init="default" autowire="default"
		dependency-check="default">
		<property name="airticketOrderBiz">
			<ref bean="airticketOrderBiz" />
		</property>
		<property name="tempPNRBiz">
			<ref bean="tempPNRBiz" />
		</property>
		<property name="passengerBiz">
			<ref bean="passengerBiz" />
		</property>
		<property name="ticketLogBiz">
			<ref bean="ticketLogBiz" />
		</property>
	</bean>
	
	<bean name="/airticket/airticketOrderTeam"
		class="com.fdays.tsms.airticket.action.AirticketOrderTeamAction"
		singleton="false" lazy-init="default" autowire="default"
		dependency-check="default">
		<property name="airticketOrderBiz">
			<ref bean="airticketOrderBiz" />
		</property>	
	</bean>
	
	<!-- 机票报表 -->
	<bean name="/airticket/report"
		class="com.fdays.tsms.airticket.action.ReportAction"
		singleton="false" lazy-init="default" autowire="default"
		dependency-check="default">
		<property name="reportBiz">
			<ref bean="reportBiz" />
		</property>
		<property name="statementBiz">
			<ref bean="statementBiz" />
		</property>
		<property name="paymentToolBiz">
			<ref bean="paymentToolBiz" />
		</property>		
		
	</bean>

	<!-- 平台登录帐号表 List-->
	<bean name="/airticket/listPlatLoginAccount"
		class="com.fdays.tsms.airticket.action.PlatLoginAccountListAction"
		singleton="false" lazy-init="default" autowire="default"
		dependency-check="default">
		<property name="platLoginAccountBiz">
			<ref bean="platLoginAccountBiz" />
		</property>
	</bean>
	
	<!-- 平台登录帐号表-->
	<bean name="/airticket/platLoginAccount"
		class="com.fdays.tsms.airticket.action.PlatLoginAccountAction"
		singleton="false" lazy-init="default" autowire="default"
		dependency-check="default">
		<property name="platLoginAccountBiz">
			<ref bean="platLoginAccountBiz" />
		</property>
		<property name="platformBiz">
			<ref bean="platformBiz" />
		</property>
	</bean>

	<!--    ///////////////////    Dao 配置       //////////////////////////     -->
	<!-- 机票订单表 dao、biz -->
	<bean id="airticketOrderBiz"
		class="com.fdays.tsms.airticket.biz.AirticketOrderBizImp">
		<property name="airticketOrderDAO">
			<ref bean="airticketOrderDAO" />
		</property>
		<property name="flightDAO">
			<ref bean="flightDAO" />
		</property>
		<property name="passengerDAO">
			<ref bean="passengerDAO" />
		</property>
		<property name="agentDAO">
			<ref bean="agentDAO" />
		</property>
		<property name="statementDAO">
			<ref bean="statementDAO" />
		</property>
		<property name="noUtil">
			<ref bean="noUtil" />
		</property>
		<property name="ticketLogDAO">
			<ref bean="ticketLogDAO" />
		</property>
		<property name="accountDAO">
			<ref bean="accountDAO" />
		</property>
		<property name="flightPassengerBiz">
			<ref bean="flightPassengerBiz"/>
		</property>
	</bean>
	
	<bean id="airticketOrderDAO"
		class="com.fdays.tsms.airticket.dao.AirticketOrderDAOImp"
		lazy-init="default" autowire="default" dependency-check="default">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>

	<!-- 航班表 dao、biz -->
	<bean id="flightBiz"
		class="com.fdays.tsms.airticket.biz.FlightBizImp">
		<property name="flightDAO">
			<ref bean="flightDAO" />
		</property>
	</bean>
	<bean id="flightDAO"
		class="com.fdays.tsms.airticket.dao.FlightDAOImp" lazy-init="default"
		autowire="default" dependency-check="default">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>

	<!-- 乘机人表 dao、biz -->
	<bean id="passengerBiz"
		class="com.fdays.tsms.airticket.biz.PassengerBizImp">
		<property name="passengerDAO">
			<ref bean="passengerDAO" />
		</property>
	</bean>
	<bean id="passengerDAO"
		class="com.fdays.tsms.airticket.dao.PassengerDAOImp"
		lazy-init="default" autowire="default" dependency-check="default">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	
	<!-- 工具类 -->
	<bean id="flightPassengerBiz"
		class="com.fdays.tsms.airticket.biz.FlightPassengerBizImp">
		<property name="flightDAO">
			<ref bean="flightDAO" />
		</property>
		<property name="passengerDAO">
			<ref bean="passengerDAO" />
		</property>		
	</bean>
	
	<!-- TempPNR  biz -->
	<bean id="tempPNRBiz"
		class="com.fdays.tsms.airticket.biz.TempPNRBizImp">
	</bean>

	<!-- 订单报表 dao、biz -->
	<bean id="reportBiz"
		class="com.fdays.tsms.airticket.biz.ReportBizImp">
		<property name="reportDAO">
			<ref bean="reportDAO" />
		</property>
		<property name="airticketOrderDAO">
			<ref bean="airticketOrderDAO" />
		</property>
	</bean>
	
	<bean id="reportDAO"
		class="com.fdays.tsms.airticket.dao.ReportDAOImp" lazy-init="default"
		autowire="default" dependency-check="default">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>

	<!-- 平台登录帐号表 dao、biz -->
	<bean id="platLoginAccountBiz"
		class="com.fdays.tsms.airticket.biz.PlatLoginAccountBizImp">
		<property name="platLoginAccountDAO">
			<ref bean="platLoginAccountDAO" />
		</property>
	</bean>
	<bean id="platLoginAccountDAO"
		class="com.fdays.tsms.airticket.dao.PlatLoginAccountDAOImp"
		lazy-init="default" autowire="default" dependency-check="default">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
</beans>