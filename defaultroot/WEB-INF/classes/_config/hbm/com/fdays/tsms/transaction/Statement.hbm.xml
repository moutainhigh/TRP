<?xml version="1.0" encoding="UTF-8"?>
<!-- [syncWithModel=true] -->
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping >

<class 
  name="com.fdays.tsms.transaction.Statement"
	table="statement"
>

<meta attribute="extends">org.apache.struts.action.ActionForm implements Cloneable</meta>
<meta attribute="class-code"><![CDATA[
  public Object clone()
  {
    Object o = null;
    try
    {
      o = super.clone();
    }
    catch (CloneNotSupportedException e)
    {
      e.printStackTrace();
    }
    return o;
}

private String thisAction="";
 public String getThisAction()
 {
     return thisAction;
 }


public void setThisAction(String thisAction)
 {
     this.thisAction=thisAction;
 }

private int index=0;
 public int getIndex()
 {
     return index;
 }


public void setIndex(int index)
 {
     this.index=index;
 }
 




]]></meta>


    <id
        name="id"
        type="long"
        column="id"
    >
        <generator class="sequence" >
          <param  name="sequence">seq_statement</param>
          </generator>
    </id>

    <property
        name="statementNo"
        column="statement_no"
        type="string"
        not-null="false"
        insert="true" update="true"
    >
	</property>
    <property
        name="orderId"
        column="order_id"
        type="java.lang.Long"
        not-null="false"
        insert="true" update="true"
    >
	</property>
    <property
        name="orderType"
        column="order_type"
        type="java.lang.Long"
        not-null="false"
        insert="true" update="true"
    >
	</property>
    <property
        name="totalAmount"
        column="total_amount"
        type="java.math.BigDecimal"
        not-null="false"
        insert="true" update="true"
    >
	</property>
    <property
        name="optTime"
        column="opt_time"
        type="java.sql.Timestamp"
        not-null="false"
        insert="true" update="true"
    >
	</property>
    <property
        name="type"
        column="type"
        type="java.lang.Long"
        not-null="false"
        insert="true" update="true"
    >
	</property>
    <property
        name="status"
        column="status"
        type="java.lang.Long"
        not-null="false"
        insert="true" update="true"
    >
	</property>
    <property
        name="statementDate"
        column="statement_date"
        type="java.sql.Timestamp"
        not-null="false"
        insert="true" update="true"
    >
	</property>
	    <property
        name="orderSubtype"
        column="order_subtype"
        type="java.lang.Long"
        not-null="false"
        insert="true" update="true"
    >
	</property>

  <property
        name="memo"
        column="memo"
        type="string"
        not-null="false"
        insert="true" update="true"
    >
	</property>
	<many-to-one name="fromAccount" class="com.fdays.tsms.transaction.Account" not-null="false" unique="false" update="true" insert="true" optimistic-lock="true" not-found="exception" embed-xml="true">
  		<column name="from_account_id" /> 
  	</many-to-one>
 	<many-to-one name="toAccount" class="com.fdays.tsms.transaction.Account" not-null="false" unique="false" update="true" insert="true" optimistic-lock="true" not-found="exception" embed-xml="true">
  		<column name="to_account_id" /> 
 	</many-to-one>


    <many-to-one
        name="sysUser"
        class="com.fdays.tsms.user.SysUser"
        not-null="false"
    >

        <column name="user_id" />
    </many-to-one>
</class>

</hibernate-mapping>